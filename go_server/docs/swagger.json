{
    "swagger": "2.0",
    "info": {
        "description": "This is a sample server for distributing mobile applications.",
        "title": "App Distribution API",
        "termsOfService": "http://swagger.io/terms/",
        "contact": {
            "name": "API Support",
            "url": "http://www.swagger.io/support",
            "email": "support@swagger.io"
        },
        "license": {
            "name": "Apache 2.0",
            "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
        },
        "version": "1.0"
    },
    "host": "localhost:8080",
    "basePath": "/api",
    "paths": {
        "/apps": {
            "get": {
                "description": "Get a list of all available applications.",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "apps"
                ],
                "summary": "List all apps",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/domain.BuildInfo"
                            }
                        }
                    },
                    "500": {
                        "description": "Failed to get apps",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/apps/upload": {
            "post": {
                "description": "Upload a new .apk or .ipa file.",
                "consumes": [
                    "multipart/form-data"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "apps"
                ],
                "summary": "Upload a new app",
                "parameters": [
                    {
                        "type": "file",
                        "description": "Application file (.apk or .ipa)",
                        "name": "app_file",
                        "in": "formData",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "Bundle ID (for .ipa)",
                        "name": "bundle_id",
                        "in": "formData"
                    },
                    {
                        "type": "string",
                        "description": "Version (for .ipa)",
                        "name": "version",
                        "in": "formData"
                    },
                    {
                        "type": "string",
                        "description": "Build Number (for .ipa)",
                        "name": "build_number",
                        "in": "formData"
                    },
                    {
                        "type": "string",
                        "description": "Title (for .ipa)",
                        "name": "title",
                        "in": "formData"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/domain.BuildInfo"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/apps/{bundle_id}": {
            "get": {
                "description": "Get a download link for the latest version of an app.",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "apps"
                ],
                "summary": "Get latest app version",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Bundle ID of the app",
                        "name": "bundle_id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/interfaces.DownloadResponse"
                        }
                    },
                    "400": {
                        "description": "Invalid URL",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/apps/{bundle_id}/versions": {
            "get": {
                "description": "Get all versions of an app.",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "apps"
                ],
                "summary": "Get all app versions",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Bundle ID of the app",
                        "name": "bundle_id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/domain.BuildInfo"
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid URL",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "domain.BuildInfo": {
            "type": "object",
            "properties": {
                "build_number": {
                    "type": "string"
                },
                "bundle_id": {
                    "type": "string"
                },
                "created_at": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "file_size": {
                    "type": "integer"
                },
                "icon": {
                    "type": "string"
                },
                "platform": {
                    "$ref": "#/definitions/domain.Platform"
                },
                "title": {
                    "type": "string"
                },
                "upload_id": {
                    "type": "string"
                },
                "version": {
                    "type": "string"
                }
            }
        },
        "domain.Platform": {
            "type": "string",
            "enum": [
                "ios",
                "android"
            ],
            "x-enum-varnames": [
                "IOS",
                "Android"
            ]
        },
        "interfaces.DownloadResponse": {
            "type": "object",
            "properties": {
                "build_number": {
                    "type": "string"
                },
                "bundle_id": {
                    "type": "string"
                },
                "created_at": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "file_size": {
                    "type": "integer"
                },
                "icon": {
                    "type": "string"
                },
                "platform": {
                    "$ref": "#/definitions/domain.Platform"
                },
                "qr_code": {
                    "type": "string"
                },
                "title": {
                    "type": "string"
                },
                "upload_id": {
                    "type": "string"
                },
                "version": {
                    "type": "string"
                }
            }
        }
    }
}